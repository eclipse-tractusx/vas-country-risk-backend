		<org.springdoc.springdoc-openapi-ui>1.6.14</org.springdoc.springdoc-openapi-ui>
		<org.springframework.cloud>3.1.5</org.springframework.cloud>
		<sonar.host.url>https://sonarcloud.io</sonar.host.url>
